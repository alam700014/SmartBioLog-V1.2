<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity"
    android:background="@color/fade_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/glow_white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/attempid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emp ID"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/grey_700" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


       <ListView
        android:id="@+id/inouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dash_box"
        android:layout_margin="3dp"
        android:layout_below="@+id/lists"
        android:id="@+id/Btnlist_close"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Close"
        android:textColor="@color/grey_700"/>
    </LinearLayout>

</LinearLayout>