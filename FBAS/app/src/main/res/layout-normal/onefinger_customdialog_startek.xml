<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="300dp">

    <TextView android:text="First Finger"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finger1"
        android:paddingLeft="5dp"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:fontFamily="TimesNewRoman"
        android:background="@color/light_orange_2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="83dp"
                android:layout_height="130dp"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:contentDescription="imageView1"
                android:padding="4dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/vertical_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:max="100"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="50"
            android:gravity="center"
            android:text="@string/sensormessages"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:textColor="@color/glow_white"
            android:fontFamily="TimesNewRoman"
            android:background="@color/light_orange_2" />
    </LinearLayout>
</LinearLayout>
