<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_title_bar">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:id="@+id/image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/light_orange"
                android:textStyle="bold"
                android:fontFamily="TimesNewRoman"
                android:id="@+id/title" />


        </LinearLayout>


        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e63900">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/view3" />

        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Card ID"
                android:layout_span="2"
                android:textSize="18sp"
                android:textColor="@color/deep_sky_blue"
                android:fontFamily="TimesNewRoman"
                android:gravity="center"/>

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Card ID"
                android:textColorHint="@color/gray"
                android:layout_span="2"
                android:textSize="18sp"
                android:maxLength="8"
                android:inputType="number"
                android:textColor="@color/fade_black_gray_2"
                android:fontFamily="TimesNewRoman"
                android:id="@+id/cardId"
                android:background="@drawable/inputbox"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pressed_button"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="OK"
                android:textSize="15sp"
                android:textColor="@color/glow_white"
                android:fontFamily="TimesNewRoman"
                android:id="@+id/btnOk" />


        </LinearLayout>

</LinearLayout>