<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    <shape>
    <stroke
        android:width="1dp"
        android:color="@color/light_blue_2" />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

    <corners android:radius="10dp" />

        <gradient
            android:startColor="@color/glow_white"
            android:centerColor="@color/glow_white"
            android:endColor="@color/light_blue_2"
            android:angle="90"/>
    </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/light_blue_2" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

            <corners android:radius="5dp" />

            <gradient
                android:startColor="@color/glow_white"
                android:centerColor="@color/glow_white"
                android:endColor="@color/light_blue_2"
                android:angle="270"/>
        </shape>
    </item>

</selector>