<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#e63900"
                android:endColor="#fffff9f2"
                android:angle="270" />

            <corners
                android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#e63900" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00ffff"
                android:centerColor="#ff3c3f41"
                android:endColor="#00ffff"
                android:angle="270" />
            <corners
                android:radius="100dp" />
            <stroke
                android:width="2dp"
                android:color="#009999" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>