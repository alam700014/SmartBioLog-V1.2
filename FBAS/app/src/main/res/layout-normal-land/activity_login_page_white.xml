        android:layout_height="wrap_content"
        android:layout_weight="0.8">
        <include
            android:id="@+id/hardwareConnection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/hardwareconnection"/>
    </LinearLayout>
    <LinearLayout
