<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!--android:id="@+id/"-->




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_row_rev">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wrong"
                android:id="@+id/smartreader"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"/>
            <!--android:layout_marginLeft="20dp"-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="TimesNewRoman"
                android:text="Smart Reader"
                android:textColor="@color/glow_white"
                android:textSize="13sp"
                android:layout_marginLeft="40dp"
                android:gravity="left"/>
            <!--android:layout_marginLeft="5dp"-->
            </FrameLayout>

            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fingerreader"
                android:src="@drawable/wrong"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />
            <!--android:layout_marginLeft="50dp" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="TimesNewRoman"
                android:text="Finger Reader"
                android:textColor="@color/glow_white"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:gravity="right"
                />
        </FrameLayout>
        </TableRow>

    </TableLayout>


</LinearLayout>