<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.android.fortunaattendancesystem.activities.User">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:paddingLeft="80dp"
        android:id="@+id/photo"
        android:src="@drawable/dummyphoto" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/cam"
        android:src="@android:drawable/ic_menu_camera"
        android:textStyle="bold"
        android:background="@color/fade_black_gray"
        android:onClick="Capture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:text="Name:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginTop="5dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etname"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:imeOptions="actionNext" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvaadhaarId"
        android:text="Aadhaar Id:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etaadhaarid"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:maxLength="12"
        android:imeOptions="actionNext" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvmobileno"
        android:text="Mobile No:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etmobileno"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:maxLength="10"
        android:imeOptions="actionNext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvemailid"
        android:text="Email Id:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etemailid"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvusername"
        android:text="Username:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etusername"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpassword"
        android:text="Password:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpassword"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:imeOptions="actionNext" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvconfirmpassword"
        android:text="Confirm Password:"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etconfirmpassword"
        android:textStyle="bold"
        android:textSize="18px"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:imeOptions="actionDone" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role"
        android:text="Is Admin"
        android:checked="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:onClick="save"
        android:text="Save"
        android:textSize="15px"
        android:background="#e63900"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="Calibri"
        android:id="@+id/btnSave"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />


</LinearLayout>
