<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/mylinearlayout"
    android:layout_width="400dp"
    android:layout_height="400dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20px"
            android:textColor="#e63900"
            android:textStyle="bold"
            android:fontFamily="TimesNewRoman"
            android:id="@+id/title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_gravity="left"
            android:id="@+id/image"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="#e63900">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="15px"
            android:textColor="@color/fade_black_gray"
            android:textStyle="bold"
            android:fontFamily="TimesNewRoman"
            android:text="Attendance Mode:"
            android:id="@+id/tvAttendanceMode" />


        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/modeSpinner"
            android:textSize="15px"
            android:textColor="@color/fade_black_gray"
            android:fontFamily="TimesNewRoman"  />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="15px"
            android:textColor="@color/fade_black_gray"
            android:textStyle="bold"
            android:fontFamily="TimesNewRoman"
            android:text="Start Time:" />

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:editable="false" >
        </EditText>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Pick time"
            android:src="@drawable/time" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="15px"
            android:textColor="@color/fade_black_gray"
            android:textStyle="bold"
            android:fontFamily="TimesNewRoman"
            android:text="End Time:" />


        <EditText
            android:id="@+id/etEndTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:editable="false" >
        </EditText>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Pick time"
            android:src="@drawable/time" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_Save"
            android:layout_width="150dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="15px"
            android:background="#e63900"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="Calibri" />

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15px"
            android:background="#e63900"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="Calibri" />

    </LinearLayout>


</LinearLayout>