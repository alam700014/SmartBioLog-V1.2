<!--                        Layout For White Tab(3G7+)                                           -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginPage"
    tools:context="com.android.fortunaattendancesystem.activities.LoginActivity">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/fade_black_gray" />

    <include
        android:id="@+id/hardwareConnection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/hardwareconnection"
        android:layout_below="@+id/view1">

    </include>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/fade_black_gray"
        android:layout_below="@+id/hardwareConnection" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Username:"
        android:textSize="20px"
        android:textStyle="bold"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_below="@+id/view2"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textStyle="bold"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/tvUsername"
        android:layout_toRightOf="@+id/tvUsername"/>

    <TextView
        android:id="@+id/tvpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter Password:"
        android:textSize="20px"
        android:textStyle="bold"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:layout_below="@+id/tvUsername"
        android:layout_alignLeft="@+id/tvUsername"/>


    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="18px"
        android:textStyle="bold"
        android:textColor="@color/fade_black_gray"
        android:fontFamily="TimesNewRoman"
        android:imeOptions="actionDone"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/tvpassword"
        android:layout_toRightOf="@+id/tvpassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Login"
        android:textSize="15px"
        android:background="#e63900"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="Calibri"
        android:layout_below="@+id/tvpassword"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

