                    <!--android:fontFamily="TimesNewRoman" />-->

            <!--</TableRow>-->



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/table_header">

                <TextView
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:text="Group Details"
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16px"
                    android:textColor="#FFFFFF"
                    android:fontFamily="TimesNewRoman" />

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="15px"
                    android:textColor="@color/fade_black_gray"
                    android:textStyle="bold"
                    android:fontFamily="TimesNewRoman"
                    android:text="Group Name:" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/GroupName"
                    android:hint="Group Name"
                    android:textSize="15px"
                    android:textColor="@color/fade_black_gray"
                    android:fontFamily="TimesNewRoman" />

            </TableRow>



            <TableRow
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="15px"
                    android:textColor="@color/fade_black_gray"
                    android:textStyle="bold"
                    android:fontFamily="TimesNewRoman"
                    android:text="Group Property:" />


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/GroupProperty"
                    android:textSize="15px"
                    android:textColor="@color/fade_black_gray"
                    android:fontFamily="TimesNewRoman"
                    android:hint="Group Property"
                    android:inputType="number"
                    android:maxLength="2"/>

            </TableRow>


            <TableRow>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:textAlignment="center"
                    android:layout_span="2"
                    android:text="Save Group"
                    android:textSize="15px"
                    android:background="@drawable/button_border"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="Calibri"
                    android:id="@+id/btnSaveGroup" />

            </TableRow>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/table_header">

                <TextView
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:text="Site Details"
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16px"
                    android:textColor="#FFFFFF"
                    android:fontFamily="TimesNewRoman" />

            </TableRow>



            <TableRow
