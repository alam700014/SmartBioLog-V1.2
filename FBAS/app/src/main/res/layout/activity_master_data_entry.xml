                    android:layout_height="wrap_content"
                    android:id="@+id/SiteCode"
                    android:hint="Site Code"
                    android:textSize="15px"
                    android:textColor="@color/fade_black_gray"
                    android:fontFamily="TimesNewRoman"
                    android:inputType="number"
                    android:maxLength="2"/>

            </TableRow>


            <TableRow>

                <Button
