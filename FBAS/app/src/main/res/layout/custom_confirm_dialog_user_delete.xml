    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioGroup
            android:id="@+id/rgDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:enabled="false"
            android:gravity="left"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbEmpData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:fontFamily="TimesNewRoman"
                android:buttonTint="@color/dark_black"
                android:text="Employee and Finger Data"
                android:textColor="@color/gray"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbFingerData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:buttonTint="@color/dark_black"
                android:text="Finger Data"
                android:textColor="@color/gray"
                android:textSize="23sp"
                android:textStyle="bold" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed_button_yes"
            android:fontFamily="TimesNewRoman"
            android:gravity="center"
            android:padding="20dp"
            android:text="Yes"
            android:textAlignment="center"
            android:textColor="@color/glow_white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pressed_button_no"
            android:fontFamily="TimesNewRoman"
            android:gravity="center"
            android:padding="20dp"
            android:text="No"
            android:textAlignment="center"
            android:textColor="@color/glow_white"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

