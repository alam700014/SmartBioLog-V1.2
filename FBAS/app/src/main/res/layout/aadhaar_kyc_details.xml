        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingLeft="60dp"
