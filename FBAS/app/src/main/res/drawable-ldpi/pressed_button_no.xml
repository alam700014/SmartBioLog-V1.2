<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/glow_white"
                android:endColor="@color/light_pink"
                android:angle="270" />

            <corners
                android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="@color/red" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/light_pink"
                android:centerColor="@color/red"
                android:endColor="@color/light_pink"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <stroke
                android:width="0dp"
                android:color="@color/red" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>