    <ScrollView
        android:id="@+id/scrollView"
        style="@style/scrollbar_shape_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/glow_white"
        android:fillViewport="true"
        android:scrollbarSize="5dp">

        <LinearLayout
            android:id="@+id/emp_enroll_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/master__background"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:onClick="Camera"
                        android:src="@drawable/dummyphoto" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_row_rev"
                    android:fontFamily="TimesNewRoman"
                    android:gravity="center"
                    android:text="Click and capture photo"
                    android:textColor="@color/glow_white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray_2"
                    android:fontFamily="TimesNewRoman"
                    android:paddingLeft="10dp"
                    android:text="Fields Marked With (*) are Mandatory"
                    android:textColor="@color/light_orange"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="@drawable/table_row"
                android:fontFamily="TimesNewRoman"
                android:text="Employee Details"
                android:textAlignment="center"
                android:textColor="@color/glow_white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EmployeeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="* Enter Employee ID"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:marqueeRepeatLimit="8"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/EmployeeIDStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" />

            <EditText
                android:id="@+id/CardID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="* Enter Card Id"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:marqueeRepeatLimit="8"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/CardIDStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" />


            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="* Enter Name"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />
            <!--android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "-->
            <!--modified for Name takes no. value-->

            <EditText
                android:id="@+id/MailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="Enter Mail Id"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/AadhaarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="Enter Aadhaar Id"
                android:inputType="number"
                android:maxLength="12"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/MobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ValidUpto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:fontFamily="TimesNewRoman"
                    android:hint="Valid Upto"
                    android:imeOptions="actionNext"
                    android:onClick="validUpto"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="28sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".20">

                    <EditText
                        android:id="@+id/BirthDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:editable="false"
                        android:fontFamily="TimesNewRoman"
                        android:hint="Date Of Birth"
                        android:imeOptions="actionNext"
                        android:onClick="dateOfBirth"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="28sp" />


                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="TimesNewRoman"
                android:text="Blood Group:"
                android:textColor="@color/gray"
                android:textSize="28sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/bloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="TimesNewRoman"
                android:scrollbarSize="30dp"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="28sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/transparent"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/pressed_button"
            android:fontFamily="TimesNewRoman"
            android:onClick="next"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="More"
            android:textAlignment="center"
            android:textColor="@color/glow_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

