<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_width="400dp"
    android:layout_height="400dp">

    <TextView android:text="First Finger"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finger1"
        android:paddingLeft="5dp"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:fontFamily="TimesNewRoman"
        android:background="@color/light_orange_2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:contentDescription="imageView1"
                android:padding="4dp" />
            <Button
                android:id="@+id/btnFirstFinger"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:contentDescription="imageView1"
                android:enabled="false"
                android:padding="4dp"
                android:text="Enroll First Finger" />
        </LinearLayout>
    </LinearLayout>

    <!--android:layout_width="83dp"-->
    <!--android:layout_height="130dp"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="50"
            android:layout_gravity="center"
            android:text="@string/sensormessages"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:textColor="@color/glow_white"
            android:fontFamily="TimesNewRoman"
            android:background="@color/light_orange_2" />
    </LinearLayout>
</LinearLayout>