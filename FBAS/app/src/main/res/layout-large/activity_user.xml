<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.android.fortunaattendancesystem.activities.User"
    android:background="@color/glow_white"
    android:id="@+id/user_activity">
    <!--android:paddingLeft="30dp"
    android:paddingRight="30dp"-->
    <ScrollView
        android:id="@+id/scrollView_user"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/master__background">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="200dp"

                            android:id="@+id/photo"
                            android:src="@drawable/dummyphoto"/>
                    </TableRow>
                    <TableRow android:gravity="center">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/cam"
                            android:src="@android:drawable/ic_menu_camera"
                            android:textStyle="bold"
                            android:background="@color/dark_black"
                            android:onClick="Capture" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvname"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginTop="5dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etname"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter Full Name"
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_fullname"
                    android:drawablePadding="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvaadhaarId"
                    android:text="Aadhaar Id:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etaadhaarid"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="number"
                    android:maxLength="12"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter 12 Digits of Aadhaar "
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_id"
                    android:drawablePadding="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvmobileno"
                    android:text="Mobile No:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etmobileno"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter Valid Mobile No."
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_mobile"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvemailid"
                    android:text="Email Id:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etemailid"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter Valid Email ID"
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_email_sine"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvusername"
                    android:text="Username:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etusername"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter Your Username"
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_name"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvpassword"
                    android:text="Password:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etpassword"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:background="@drawable/inputbox"
                    android:hint="Enter Secure Password"
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_pass"
                    android:drawablePadding="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvconfirmpassword"
                    android:text="Confirm Password:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/grey_700"
                    android:fontFamily="TimesNewRoman" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etconfirmpassword"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/dark_black"
                    android:fontFamily="TimesNewRoman"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:background="@drawable/inputbox"
                    android:hint="Re-enter The Password"
                    android:textColorHint="@color/light_gray"
                    android:drawableLeft="@drawable/user_pass_match"
                    android:drawablePadding="5dp"/>

                <CheckBox
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:checked="true"
                    android:text="Is Admin"
                    android:textSize="25sp"
                    android:textColor="@color/grey_700"
                    android:background="@drawable/check_uncheck"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/glow_white">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:onClick="save"
            android:text="Save"
            android:textSize="30sp"
            android:background="@drawable/pressed_button"
            android:textStyle="bold"
            android:textColor="@color/glow_white"
            android:fontFamily="Calibri"
            android:id="@+id/btnSave"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/add_user"/>
    </LinearLayout>
</LinearLayout>
